@model cursoMVC1.Models.Alumno

@{
    ViewBag.Title = "DetallesAlumnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DetallesAlumnos</h2>

<div>
    <h4>Alumno</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre completo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>

        <dt>
            Edad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.edad)
        </dd>

        <dt>
            Sexo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sexo)
        </dd>

        <dt>
            Fecha de alta
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fechaRegistro)
        </dd>


        <dt>
            Ciudad
        </dt>

        <dd>
            @if (Model.codCiudad == 1)
            {
                <p>Ramallo</p>
            }
            else if (Model.codCiudad == 2)
            {
                <p>San Pedro</p>
            }
            else
            {
                <p>San Nicolas</p>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Editar", new { id = Model.id }) |
    @Html.ActionLink("Atras", "Index")
</p>
